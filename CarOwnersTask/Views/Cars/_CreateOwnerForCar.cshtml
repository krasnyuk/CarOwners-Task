@model CarOwnersTask.Models.ViewModels.CarOwnerViewModel


@using (Html.BeginForm("CreateOwnerForCar", "Cars", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x=>x.CarId)
    <div class="form-horizontal col-md-offset-2">
        <h4>Please, select owner for a car!</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
           
            <div class="col-md-12">
                @Html.DropDownList("OwnerId", Model.list, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
}

