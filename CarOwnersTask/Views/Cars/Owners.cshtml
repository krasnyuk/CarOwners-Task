@model CarOwnersTask.Models.ViewModels.CarOwnerViewModel


@{
    ViewBag.Title = "Owners";
}

<h2>List of car owners </h2>

<button type="button" class="btn btn-info btn-md"
        data-toggle="modal" data-target="#myModal">
    Add owner
    <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
</button>

<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.Label("Owner Name")
        </th>
       

        <th></th>
    </tr>

    @foreach (var item in Model.Owners)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            
            <td>

                @Html.ActionLink("Delete", "DeleteOwner",
               new {
                   ownerId = item.OwnerId,
                   carId = Model.CarId
               },
               new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">New owner</h4>
            </div>
            <div class="modal-body">
                @Html.Action("NewOwner", new { carId = Model.CarId })
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>