@model CarOwnersTask.Models.ViewModels.OwnerCarsViewModel
@{
    ViewBag.Title = "Cars";
}

<h2>List of cars</h2>

<button type="button" class="btn btn-info btn-md"
        data-toggle="modal" data-target="#myModal">
    Add car
    <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
</button>

<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.Label("Model")
        </th>
        <th>
            @Html.Label("Brand")
        </th>
        <th>
            @Html.Label("Year")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Cars)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ManufactureYear)
            </td>
            <td>

                @Html.ActionLink("Delete", "DeleteCarOfOwner",
               new
               {
                   ownerId = Model.OwnerId,
                   carId = item.CarId
               },
               new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">New car</h4>
            </div>
            <div class="modal-body">
                @Html.Action("NewCar", new { ownerId = Model.OwnerId })
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

